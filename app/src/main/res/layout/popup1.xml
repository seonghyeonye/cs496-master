    android:layout_height="wrap_content"
    android:background="#62def8"
    android:layout_marginTop="250dp"
    android:layout_marginLeft="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textSize="22sp"
